<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="edu.rosehulman.sanderkd.streamteam.MessageActivity">


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/messages_recycler"
        android:layout_above="@+id/send_message_text">

    </android.support.v7.widget.RecyclerView>

    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:hint="Write a message!"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/messages_recycler"
        android:layout_alignStart="@+id/messages_recycler"
        android:id="@+id/send_message_text"
        android:layout_toLeftOf="@+id/send_message_button"
        android:layout_toStartOf="@+id/send_message_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:id="@+id/send_message_button"
        android:layout_alignBottom="@+id/send_message_text"
        android:layout_alignRight="@+id/messages_recycler"
        android:layout_alignEnd="@+id/messages_recycler" />

</RelativeLayout>
